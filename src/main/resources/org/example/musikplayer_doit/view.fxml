               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button focusTraversable="false" onAction="#clickPrevious" prefHeight="40.0" prefWidth="40.0" text="⏮">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button fx:id="playButton" contentDisplay="CENTER" focusTraversable="false" maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0" onAction="#clickPlay" prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 50; -fx-font-size: 25px;" textAlignment="CENTER" textOverrun="CLIP">
               <font>
                  <Font size="38.0" />
               </font>
               <graphic>
                  <Label fx:id="playButtonLabel" alignment="CENTER" maxWidth="50.0" minWidth="50.0" prefHeight="40.0" prefWidth="40.0" text="▶">
                     <font>
                        <Font size="28.0" />
                     </font></Label>
               </graphic>
            </Button>
            <Button focusTraversable="false" onAction="#clickNext" prefHeight="40.0" prefWidth="40.0" text="⏭">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <ToggleButton fx:id="autoPlayButton" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="#autoPlayButton:pressed {    -fx-background-color: derive(-fx-base, 50%);}" text="⏯">
