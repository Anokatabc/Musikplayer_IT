                  <Tooltip text="Toggle AutoPlay" />
               </tooltip>
            </ToggleButton>
            <Label fx:id="barTimer" alignment="CENTER" focusTraversable="false" prefHeight="45.0" prefWidth="48.0" text="00:00" textAlignment="CENTER">
