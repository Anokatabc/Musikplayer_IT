                        <Tooltip fx:id="barTooltip" />
                     </tooltip>
                  </ProgressBar>
                  <Label fx:id="progressBarLabel" />
               </children>
            </StackPane>
            <ToggleButton fx:id="repeatQueueButton" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="#autoPlayButton:pressed {    -fx-background-color: derive(-fx-base, 50%);}" text="↻">
               <tooltip>
                  <Tooltip text="Toggle AutoPlay" />
               </tooltip>
               <font>
                  <Font size="20.0" />
               </font>
            </ToggleButton>
         </children>
      </HBox>
   </bottom>
