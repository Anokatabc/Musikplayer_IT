                  <Point3D />
               </rotationAxis>
               <font>
                  <Font size="16.0" />
               </font></Label>
            <StackPane minHeight="31.0" minWidth="100.0" prefHeight="76.0" prefWidth="421.0">
               <children>
                  <ProgressBar fx:id="progressBar" focusTraversable="false" maxHeight="150.0" minHeight="30.0" onMouseMoved="#updateProgressBar" prefHeight="45.0" prefWidth="421.0" progress="0.0">
