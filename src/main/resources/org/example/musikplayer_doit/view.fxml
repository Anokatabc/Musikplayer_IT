<BorderPane fx:id="borderPane" prefHeight="707.0" prefWidth="1075.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musikplayer_doit.controller.Controller">
   <bottom>
      <HBox minHeight="60.0" prefHeight="62.0" prefWidth="1075.0" BorderPane.alignment="CENTER">
